.u-toolbar {
  height: 42px;

  display: flex;

  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.u-toolbar__wrapper__cancel {
  color: #909193;
  font-size: 15px;
  padding: 0 15px;
}
.u-toolbar__title {
  color: #303133;
  padding: 0 60rpx;
  font-size: 16px;
  flex: 1;
  text-align: center;
}
.u-toolbar__wrapper__confirm {
  color: #3c9cff;
  font-size: 15px;
  padding: 0 15px;
}

