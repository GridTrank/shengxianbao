.page_wrap {
  padding: 20rpx 30rpx 130rpx 30rpx;
  position: relative;
}
.page_wrap .bg {
  position: absolute;
  top: 0;
  width: 100%;
  height: 400rpx;
  background: linear-gradient(180deg, #FE5B07 0%, #FE5B07 27%, #F9CDB6 79%, rgba(247, 247, 247, 0.16) 100%);
  z-index: -1;
  left: 0;
  background-size: 100% 100%;
}
.page_wrap .page_top .status_tit {
  color: #fff;
  font-size: 32rpx;
}
.page_wrap .page_top .info {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.page_wrap .page_top .info .name_p .name {
  margin-right: 20rpx;
}
.page_wrap .detail {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  height: 240rpx;
  overflow: hidden;
}
.page_wrap .detail .detail_item {
  margin-bottom: 30rpx;
}
.page_wrap .detail .pz {
  border-top: 1px dashed #E7E7E7;
  padding-top: 30rpx;
}
.page_wrap .h_auto {
  height: auto;
}
.page_wrap .goods {
  padding: 30rpx 0;
  background-color: #fff;
  border-radius: 8rpx;
}
.page_wrap .goods .title {
  margin: 30rpx;
}
.page_wrap .goods .list .item .item_wrap {
  align-items: flex-start;
  padding: 30rpx;
}
.page_wrap .goods .list .item .img {
  width: 120rpx;
  margin-right: 20rpx;
}
.page_wrap .goods .list .item .info {
  width: 460rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #E7E7E7;
}
.page_wrap .goods .list .item .info .bao {
  background-color: #fff4ed;
  color: #FE5B07;
  font-size: 20rpx;
  border-radius: 2rpx;
  padding: 0 4rpx;
  margin-right: 10rpx;
}
.page_wrap .goods .list .item .info .num_util {
  color: #FE5B07;
}
.page_wrap .goods .list .item .info .total {
  color: #D30000;
  font-size: 24rpx;
  width: 100%;
  text-align: right;
  padding-top: 20rpx;
  border-top: 1px solid #E7E7E7;
}
.page_wrap .log .row {
  justify-content: space-between;
  padding: 30rpx;
}
.page_wrap .log .row .log_item {
  width: 180rpx;
  height: 100rpx;
  text-align: center;
  white-space: normal;
}
.page_wrap .btn_wrap {
  position: fixed;
  width: 100%;
  background-color: #fff;
  padding: 30rpx 0;
  bottom: 0;
  left: 0;
  border-top: 1px solid #f1f1f1;
  display: flex;
  justify-content: center;
}
.page_wrap .btn_wrap .btn {
  width: 240rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 28rpx;
}
.page_wrap .btn_wrap .left {
  background: #C3C3C3;
  margin-right: 30rpx;
}
.page_wrap .btn_wrap .right {
  background: linear-gradient(113deg, #F87523 0%, #FF6C00 0%, #FD1D20 100%);
}

